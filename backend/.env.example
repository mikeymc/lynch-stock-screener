# Schwab API Configuration
# Get your credentials from: https://developer.schwab.com/

# Your Schwab API App Key
SCHWAB_API_KEY=your_app_key_here

# Your Schwab API App Secret
SCHWAB_API_SECRET=your_app_secret_here

# OAuth redirect URI (must match what you configured in Schwab Developer Portal)
# For local development, use: https://localhost or https://127.0.0.1
SCHWAB_REDIRECT_URI=https://localhost

# Path to store OAuth tokens (relative to backend directory)
SCHWAB_TOKEN_PATH=./tokens/schwab_tokens.json

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey

# Your Gemini API Key for generating Peter Lynch-style stock analyses
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth Configuration
# Get your credentials from: https://console.cloud.google.com/apis/credentials

# Your Google OAuth Client ID
GOOGLE_CLIENT_ID=your_google_client_id_here

# Your Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth redirect URI (must match what you configured in Google Cloud Console)
# For local development: http://localhost:5000/api/auth/google/callback
# For production: https://yourdomain.com/api/auth/google/callback
OAUTH_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Flask Session Configuration
# Generate a random secret key (e.g., using: python -c "import secrets; print(secrets.token_hex(32))")
SESSION_SECRET_KEY=your_session_secret_key_here

# Session storage type (filesystem for development, redis for production)
SESSION_TYPE=filesystem

# Frontend URL for CORS configuration
# For local development: http://localhost:5173
# For production: https://yourdomain.com
FRONTEND_URL=http://localhost:5173
